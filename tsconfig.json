{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true

  }
}